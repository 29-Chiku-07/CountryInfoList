<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ro.ashishkumar.countriesapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="ro.ashishkumar.countriesapp.network.DetailActivity"
                  android:parentActivityName="ro.ashishkumar.countriesapp.network.DetailActivity"
                  android:theme="@style/AppTheme"/>
        <activity
                android:name="ro.ashishkumar.countriesapp.network.CountriesActivity"
                android:theme="@style/NoTheme"/>
        <activity
                android:name="ro.ashishkumar.countriesapp.network.MainActivity"
                android:theme="@style/NoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>